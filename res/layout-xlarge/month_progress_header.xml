<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="50"
    android:background="@drawable/right_top_bg"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_month_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:text="전체선택"
        android:textColor="#555555"
        android:textSize="14dp" />

    <ImageView
        android:id="@+id/iv_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"
        android:src="@drawable/check_off" />

    <Button
        android:id="@+id/btn_all"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_weight="110"
        android:background="@drawable/dropdown_selector"
        android:gravity="center_vertical"
        android:text="전체"
        android:textColor="#555555"
        android:textSize="@dimen/pop_txt_size2" />

    <CheckBox
        android:id="@+id/maintenance_filter2_id"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="6dp"
        android:layout_weight="110"
        android:background="@drawable/dropdown_selector"
        android:button="@null"
        android:checked="false"
        android:text="고객명"
        android:textColor="#555555"
        android:textSize="@dimen/pop_txt_size2" />

    <ImageView
        android:layout_gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginLeft="3dp"
        android:src="@drawable/img_line" />

    <Button
        android:id="@+id/btn_carnum"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="3dp"
        android:layout_weight="110"
        android:background="@drawable/dropdown_selector"
        android:gravity="center_vertical"
        android:text="차량번호"
        android:textColor="#555555"
        android:textSize="@dimen/pop_txt_size2" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="6dp"
        android:layout_weight="121" >

        <EditText
            android:id="@+id/et_search"
            android:layout_width="110dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/input01"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:textColor="#555555"
            android:textSize="16dp" >
        </EditText>

        <Button
            android:id="@+id/btn_delete_text"
            android:layout_width="21dp"
            android:layout_height="21dp"
            android:layout_gravity="center_vertical|right"
            android:layout_marginRight="8dp"
            android:background="@drawable/btn_close01_n"
            android:visibility="invisible" />
    </FrameLayout>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp"
        android:layout_weight="81"
        android:background="@drawable/search_btn_selector"
        android:gravity="center"
        android:shadowColor="#b36f56"
        android:shadowDy="-1"
        android:shadowRadius="1"
        android:text="조회"
        android:textColor="@drawable/search_btn_text_selector"
        android:textSize="16dp" />

</LinearLayout>