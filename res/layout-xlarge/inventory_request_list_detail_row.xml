<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/table_list_selector"
        android:gravity="center_vertical" >

        <ImageView
            android:id="@+id/inventory_request_list_detail_row_id1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:src="@drawable/check_off" />

        <TextView
            android:id="@+id/inventory_request_list_detail_row_id2"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="마티즈 크리에이티브"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#333333"
            android:textSize="16sp" />

        <RelativeLayout
            android:layout_width="60dp"
            android:layout_height="match_parent" >

		      <TextView
		          android:id="@+id/inventory_request_list_detail_row_id3"
		          android:layout_width="match_parent"
		          android:layout_height="36dp"
		          android:layout_centerInParent="true"
		          android:background="@drawable/input01"
		          android:focusable="false"
		          android:gravity="center"
		          android:maxLines="1"
		          android:text="33333"
		          android:textColor="#777777"
		          android:textSize="15sp" />

        </RelativeLayout>



        <TextView
            android:id="@+id/inventory_request_list_detail_row_id4"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="0"
            android:textColor="#777777"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/inventory_request_list_detail_row_id5"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="10"
            android:textColor="#777777"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/inventory_request_list_detail_row_id6"
            android:layout_width="214dp"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:maxLines="2"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="강남구 서초동"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#777777"
            android:textSize="15sp" />

        <ImageView
            android:id="@+id/inventory_request_list_detail_row_id7"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:src="@drawable/table_list_delete_selector" />

    </LinearLayout>

</LinearLayout>
