<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="4dp"
    android:layout_marginBottom="4dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <!--
            <TextView
            android:id="@+id/tv_booking"
            android:layout_width="80dp"
            android:layout_height="24dp"
            android:background="@drawable/list_infobox05"
            android:gravity="center"
            android:text="예약대기"
            android:textColor="#ffffff"
            android:textSize="14dp" />
        -->

        <LinearLayout
            android:id="@+id/ll_maintenace"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_agreement"
                android:layout_width="110dp"
                android:layout_height="24dp"
                android:background="@drawable/list_infobox02"
                android:gravity="center"
                android:text="계약종료"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_period"
                android:layout_width="110dp"
                android:layout_height="24dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/list_infobox01"
                android:gravity="center"
                android:text="장기"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_gueen2"
                android:layout_width="110dp"
                android:layout_height="24dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/list_infobox05"
                android:gravity="center"
                android:text="계약종료"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_voc_info"
                android:layout_width="110dp"
                android:layout_height="24dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/list_infobox03"
                android:gravity="center"
                android:text="VOC 내역"
                android:textColor="#ffffff"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tv_odc_info"
                android:layout_width="110dp"
                android:layout_height="24dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/list_infobox05"
                android:gravity="center"
                android:text="ODM"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_iot_info"
                android:layout_width="110dp"
                android:layout_height="24dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/list_infobox04"
                android:gravity="center"
                android:text="IoT"
                android:textColor="#ffffff"
                android:textSize="14dp"
                android:visibility="visible" />


            <View
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.3" />

            <!--
                  <TextView
                android:id="@+id/tv_maintenance"
                android:layout_width="80dp"
                android:layout_height="24dp"
                android:layout_marginLeft="6dp"
                android:background="@drawable/list_infobox02"
                android:gravity="center"
                android:text="순회정비"
                android:textColor="#ffffff"
                android:textSize="14dp" />
            -->

        </LinearLayout>
    </LinearLayout>

</LinearLayout>