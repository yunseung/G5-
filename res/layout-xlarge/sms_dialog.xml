<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="436dp"
    android:layout_height="454dp"
    android:background="@drawable/popup_sms_bg"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="8dp" >

    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="44dp" >

    <ImageView
        android:id="@+id/iv_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:src="@drawable/popup_btn_selector" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/popup_blit" />

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="SMS 발송"
            android:textColor="#555555"
            android:textSize="17sp" />

        
    </LinearLayout>

</RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="114dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:paddingLeft="22dp"
        android:paddingRight="22dp" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="38dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|left"
                android:text="고객차량번호"
                android:textColor="#777777"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_carnum"
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:gravity="right|center_vertical"
                android:text="00허1234"
                android:textColor="#333333"
                android:textSize="24sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="38dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|left"
                android:text="고객명"
                android:textColor="#777777"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:gravity="right|center_vertical"
                android:text="홍길동"
                android:textColor="#333333"
                android:textSize="24sp" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="38dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_vertical|left"
                android:text="고객연락처"
                android:textColor="#777777"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/tv_contact"
                android:layout_width="206dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:gravity="right|center_vertical"
                android:text="010-1234-5678"
                android:textColor="#333333"
                android:textSize="24sp" />
        </FrameLayout>
    </LinearLayout>

    <com.ktrental.ui.PopupWindowTextView
        android:id="@+id/tv_message_type"
        android:layout_width="match_parent"
        android:layout_height="36dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_dd01_selector"
        android:gravity="center_vertical|left"
        android:paddingLeft="20dp"
        android:text="메세지 유형 선택"
        android:textColor="#555555"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/et_message"
        android:layout_width="match_parent"
        android:layout_height="139dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:background="@drawable/input_selector"
        android:gravity="left|top"
        android:imeOptions="actionSearch"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="16dp"
        android:textColor="#333333"
        android:textSize="22sp" >
    </EditText>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <Button
            android:id="@+id/btn_send"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn01_selector"
            android:text="전송"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="195dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn05_selector"
            android:text="취소"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>