<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:orientation="horizontal" 
    >
    
    
    <LinearLayout 
        android:id="@+id/history_back_id"
        android:layout_width ="match_parent"
        android:layout_height="70dp"
        android:weightSum="3"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/left_list_bg_selector"
        >
        <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="70dp"
	        android:layout_weight="2"
	        android:orientation="vertical"
	        android:gravity="center_vertical"
	        >
	
	        <TextView
	            android:id="@+id/history_row_id1"
	            android:layout_width="90dp"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="23dp" 
	            android:maxLines="1"
	            android:text="2013.01.03"
	            android:textColor="#333333"
	            android:textSize="18sp" />
	
	        <TextView
	            android:id="@+id/history_row_id2"
	            android:layout_width="134dp"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="23dp" 
	            android:gravity="left|center_vertical"
	            android:text="순회정비"
	            android:textColor="#333333"
	            android:textSize="18sp" />
	
	    </LinearLayout>
	    
        
         <LinearLayout
	        android:layout_width="0dp"
	        android:layout_height="70dp"
	        android:layout_weight="1"
	        android:orientation="vertical"
	        android:gravity="center_vertical"
	        >
	        
             <TextView 
            android:id = "@+id/bt_history_left"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn01_selector"
           	android:layout_gravity="center"
           	android:gravity="center"
           	android:textColor="#ffffff"
            android:text="이동"/>
        
        
             
        </LinearLayout>
        
    </LinearLayout>

    

</LinearLayout>
