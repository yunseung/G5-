<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="@dimen/pop_max_width"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/pop_padding"
    android:layout_marginRight="@dimen/pop_padding"
    android:layout_gravity="center"
    android:background="@drawable/popup_bg"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="8dp" >

    <include
        android:id="@+id/layout_title"
        layout="@layout/common_dialog_title_layout" />

    <include layout="@layout/movement_top_layout" />

    <include layout="@layout/movement_middle_layout" />

    <include layout="@layout/movement_bottom_layout" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:gravity="center_vertical"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/btn_save"
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btn01_selector"
                android:gravity="center"
                android:text="저장"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>