<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/table_list_selector" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="65dp" >

        <TextView
            android:id="@+id/duedate_dialog_right_row_id1"
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="34허1234"
            android:textColor="#0079a0"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp" >

            <TextView
                android:id="@+id/duedate_dialog_right_row_id2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="홍길동"
                android:textColor="#0079a0"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/duedate_dialog_right_row_id3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="서울 마포구 상암동 상암월드"
                android:textColor="#0079a0"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>