<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="311dp"
    android:layout_height="349dp"
    android:orientation="vertical"
    android:padding="7dp" >

    <LinearLayout
        android:layout_width="283dp"
        android:layout_height="321dp"
        android:background="@drawable/popup_calculator_bg"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/inventory_bt_input"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@drawable/popup_calculator_diaplay"
            android:gravity="right|center_vertical"
            android:maxLength="14"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:shadowColor="#9e9e9e"
            android:shadowDy="-2"
            android:textColor="#333333"
            android:textSize="30sp" >
        </TextView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/inventory_bt_num_7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/popup_caculator_btn_07_selector" />

            <Button
                android:id="@+id/inventory_bt_num_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:background="@drawable/popup_caculator_btn_08_selector" />

            <Button
                android:id="@+id/inventory_bt_num_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:background="@drawable/popup_caculator_btn_09_selector" />

            <Button
                android:id="@+id/inventory_bt_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/popup_caculator_btn_del_selector" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/inventory_bt_num_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/popup_caculator_btn_04_selector" />

            <Button
                android:id="@+id/inventory_bt_num_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:background="@drawable/popup_caculator_btn_05_selector" />

            <Button
                android:id="@+id/inventory_bt_num_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:background="@drawable/popup_caculator_btn_06_selector" />

            <Button
                android:id="@+id/inventory_bt_clear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/popup_caculator_btn_clear_selector" />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/ll_bottom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/inventory_bt_num_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/popup_caculator_btn_01_selector" />

                <Button
                    android:id="@+id/inventory_bt_num_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:background="@drawable/popup_caculator_btn_02_selector" />

                <Button
                    android:id="@+id/inventory_bt_num_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dp"
                    android:background="@drawable/popup_caculator_btn_03_selector" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" 
                android:layout_below="@+id/ll_bottom"
                android:layout_marginTop="1dp">
                
                <Button
                android:id="@+id/inventory_bt_num_0"
                android:layout_width="212dp"
                android:layout_height="wrap_content"
                android:background="@drawable/popup_caculator_btn_00_selector" />
            </LinearLayout>

            

            <Button
                android:id="@+id/inventory_bt_done"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="1dp"
                android:layout_toRightOf="@+id/ll_bottom"
                android:background="@drawable/popup_caculator_btn_ok_selector" />
        </RelativeLayout>
    </LinearLayout>

</LinearLayout>