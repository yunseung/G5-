<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/ImageView01"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:src="@drawable/blit02" />

            <TextView
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="기본정보"
                android:textColor="#555555"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1036dp"
            android:layout_height="108dp"
            android:background="@drawable/table_bg"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp" >

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="이동사유"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/dropdown_selector"
                    android:enabled="false" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="등록일시"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_search01_selector"
                    android:enabled="false" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="등록자"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/input_selector"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="차량번호"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/dropdown_selector"
                    android:enabled="false" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="차종"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/Button01"
                    android:layout_width="540dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/input_selector"
                    android:enabled="false" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:gravity="center" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:src="@drawable/blit02" />

            <TextView
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="출발정보"
                android:textColor="#555555"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1036dp"
            android:layout_height="149dp"
            android:background="@drawable/table_bg"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp" >

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="출발지정보"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/dropdown_selector"
                    android:enabled="false" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="출발지점"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/dropdown_selector"
                    android:enabled="false" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="주차장"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/dropdown_selector"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="출발/KM"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/dropdown_selector"
                    android:enabled="false" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="출발/OIL"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/dropdown_selector"
                    android:enabled="false" />

                <Button
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/dropdown_selector"
                    android:enabled="false" />

                <Button
                    android:layout_width="62dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/input_selector"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="운전자"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/dropdown_selector"
                    android:enabled="false" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="출발일시"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/dropdown_selector"
                    android:enabled="false" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="31dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="2dp"
            android:gravity="center" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:src="@drawable/blit02" />

            <TextView
                android:layout_width="106dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:text="도착정보"
                android:textColor="#555555"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="1036dp"
            android:layout_height="149dp"
            android:background="@drawable/table_bg"
            android:gravity="center_vertical"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp" >

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="도착지정보"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/dropdown_selector"
                    android:enabled="false" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="도착지점"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/dropdown_selector"
                    android:enabled="false" />

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="주차장"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/Button02"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/dropdown_selector"
                    android:enabled="false" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="도착/KM"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/input_selector" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="도착/OIL"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/dropdown_selector"
                    android:enabled="false" />

                <Button
                    android:layout_width="87dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/dropdown_selector" />

                <Button
                    android:layout_width="62dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/input_selector" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginTop="5dp" >

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="운전자"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <Button
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/dropdown_selector" />

                <TextView
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:gravity="right"
                    android:text="도착일시"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/button1"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn_search01_selector" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/inventory_maintenance_done_layout_id"
        android:layout_width="match_parent"
        android:layout_height="54dp" >

        <Button
            android:id="@+id/menu1_slide_done_id"
            android:layout_width="272dp"
            android:layout_height="36dp"
            android:layout_centerInParent="true"
            android:background="@drawable/btn01_selector"
            android:onClick="onSlideDone"
            android:shadowColor="#000000"
            android:shadowDy="1.0"
            android:shadowRadius="1.0"
            android:text="도착등록"
            android:textColor="#ffffff"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>