<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/pop_max_width"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/popup_bg"
        android:orientation="vertical"
        android:padding="8dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp" >

            <Button
                android:id="@+id/address_change_close_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/popup_btn_selector" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/popup_blit" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="배송처 등록"
                    android:textColor="#555555"
                    android:textSize="17sp" />
            </LinearLayout>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="54dp"
                android:layout_marginLeft="34dp"
                android:gravity="bottom|left" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:src="@drawable/blit02" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:text="배송처 정보"
                    android:textColor="#555555"
                    android:textSize="18sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="148dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/table_bg"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:layout_width="154dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="13dp"
                        android:gravity="right|center_vertical"
                        android:text="배송처구분"
                        android:textColor="#555555"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/delivery_resist_name_id"
                        android:layout_width="304dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/input01"
                        android:gravity="left|center_vertical"
                        android:textColor="#555555"
                        android:textSize="16sp" />

                    <CheckBox
                        android:id="@+id/delivery_resist_check_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/check_selector"
                        android:text="기본배송처"
                        android:textColor="#555555" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:layout_width="154dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="13dp"
                        android:gravity="right|center_vertical"
                        android:text="배송처주소"
                        android:textColor="#555555"
                        android:textSize="16sp" />

                    <Button
                        android:id="@+id/delivery_resist_addr1_id"
                        android:layout_width="148dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/btn_search01_selector"
                        android:textColor="#555555"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/delivery_resist_addr2_id"
                        android:layout_width="657dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="6dp"
                        android:background="@drawable/input01_d"
                        android:gravity="left|center_vertical"
                        android:textColor="#555555"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp" >

                    <TextView
                        android:layout_width="154dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="13dp"
                        android:gravity="right|center_vertical"
                        android:text=""
                        android:textColor="#555555"
                        android:textSize="16sp" />

                    <EditText
                        android:id="@+id/delivery_resist_addr3_id"
                        android:layout_width="811dp"
                        android:layout_height="36dp"
                        android:layout_marginLeft="10dp"
                        android:background="@drawable/input01"
                        android:gravity="left|center_vertical"
                        android:textColor="#555555"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp" >

            <Button
                android:id="@+id/delivery_resist_save_id"
                android:layout_width="270dp"
                android:layout_height="36dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:background="@drawable/btn01_selector"
                android:shadowColor="#777777"
                android:shadowDy="-1"
                android:shadowRadius="1"
                android:text="배송처등록"
                android:textColor="#ffffff"
                android:textSize="18sp" />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>