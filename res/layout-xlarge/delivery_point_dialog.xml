<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="@dimen/pop_max_width"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/pop_padding"
        android:background="@drawable/popup_bg"
        android:orientation="vertical"
        android:padding="8dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp" >

            <Button
                android:id="@+id/delivery_point_close_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:background="@drawable/popup_btn_selector" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/popup_blit" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="배송지 관리"
                    android:textColor="#555555"
                    android:textSize="17sp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="76dp"
            android:background="@drawable/inquiry_bg"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="20dp"
                android:gravity="center_vertical" >

                <Button
                    android:id="@+id/delivery_point_resist_id"
                    android:layout_width="150dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/btn_ing01_selector"
                    android:gravity="center"
                    android:shadowColor="#b36f56"
                    android:shadowDy="-1"
                    android:text="배송지등록"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

                <Button
                    android:id="@+id/delivery_point_delete_id"
                    android:layout_width="150dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="6dp"
                    android:background="@drawable/btn_ing01_selector"
                    android:gravity="center"
                    android:shadowColor="#b36f56"
                    android:shadowDy="-1"
                    android:text="선택삭제"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#cccccc" >
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp" >

            <RelativeLayout
                android:id="@+id/delivery_point_btm"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_alignParentBottom="true" >

                <Button
                    android:id="@+id/delivery_point_save_id"
                    android:layout_width="270dp"
                    android:layout_height="36dp"
                    android:layout_centerInParent="true"
                    android:background="@drawable/btn01_selector"
                    android:shadowColor="#777777"
                    android:shadowDy="-1"
                    android:shadowRadius="1"
                    android:text="확인"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </RelativeLayout>

            <ListView
                android:id="@+id/delivery_point_listview_id"
                android:layout_width="match_parent"
                android:layout_height="536dp"
                android:layout_above="@id/delivery_point_btm"
                android:background="@drawable/table_bg"
                android:divider="@null"
                android:listSelector="@drawable/table_list_s"
                android:paddingBottom="4dp"
                android:paddingTop="31dp" >
            </ListView>

            <ImageView
                android:id="@+id/list_nodata_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/nodata" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:background="@drawable/table_top" >

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="선택"
                    android:textColor="#555555"
                    android:textSize="16sp"
                    android:visibility="invisible" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:text="배송처구분"
                    android:textColor="#555555"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="기본배송처"
                    android:textColor="#555555"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="우편번호"
                    android:textColor="#555555"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="주소선택"
                    android:textColor="#555555"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="상세주소"
                    android:textColor="#555555"
                    android:textSize="16sp" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>