<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_root"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/maintenance_return_title_id"
            android:layout_width="wrap_content"
            android:layout_height="42dp"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="8dp"
            android:gravity="left|center_vertical"
            android:text="반송사유 입력"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffff"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/maintenance_return_edittext_id"
            android:layout_width="356dp"
            android:layout_height="118dp"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:background="@drawable/popup_wbg"
            android:ems="10"
            android:gravity="left"
            android:padding="10dp" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/maintenance_return_edittext_done_id"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/popup_btn01_selector"
            android:text="입력" />

    </LinearLayout>

</RelativeLayout>
