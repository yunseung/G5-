<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/day_cell_ll_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="4dp" >

        <!-- 날짜 -->

        <TextView
            android:id="@+id/day_cell_tv_day"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:text="32"
            android:textColor="#333333"
            android:textSize="@dimen/calendar_height_day"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/day_cell_tv_day"
            android:gravity="center" >

            <TextView
                android:id="@+id/day_cell_handle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:textColor="#555555"
                android:textSize="@dimen/calendar_height_other"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/day_cell_tv_plan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="/20"
                android:textColor="#aaaaaa"
                android:textSize="@dimen/calendar_height_other" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>