<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="64dp"
    android:orientation="horizontal"
    android:weightSum="3"
    >

    <LinearLayout
        android:id="@+id/ll_prev_month"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:layout_marginBottom="67dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_prev_month_left_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/graph_tag01"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="0%"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_prev_month_left"
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/graph01" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="22dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_prev_month_center_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/graph_tag02"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="0%"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_prev_month_center"
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/graph02" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="22dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_prev_month_right_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/graph_tag03"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="0%"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_prev_month_right"
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/graph03" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/v_left"
        android:layout_width="1dp"
        android:layout_height="251dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="67dp"
        android:layout_toRightOf="@+id/ll_prev_month"
        android:background="#e7e5df" />

    <LinearLayout
        android:id="@+id/ll_current_month"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:layout_marginBottom="67dp"
        android:layout_toRightOf="@+id/v_left"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_current_month_left_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/graph_tag01"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="0%"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_current_month_left"
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/graph01" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="22dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_current_month_center_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/graph_tag02"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="0%"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_current_month_center"
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/graph02" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="22dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_current_month_right_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/graph_tag03"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="0%"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_current_month_right"
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/graph03" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:id="@+id/v_right"
        android:layout_width="1dp"
        android:layout_height="251dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="67dp"
        android:layout_toRightOf="@+id/ll_current_month"
        android:background="#e7e5df" />

    <LinearLayout
        android:id="@+id/ll_next_month"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="bottom|center_horizontal"
        android:layout_marginBottom="67dp"
        android:layout_toRightOf="@+id/v_right"
        android:orientation="horizontal" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_next_month_left_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/graph_tag01"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="0%"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_next_month_left"
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/graph01" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="22dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_next_month_center_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/graph_tag02"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="0%"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_next_month_center"
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/graph02" />
        </LinearLayout>

        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="22dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tv_next_month_right_tag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/graph_tag03"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:text="0%"
                android:textColor="#ffffff"
                android:textSize="16sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/iv_next_month_right"
                android:layout_width="45dp"
                android:layout_height="0dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/graph03" />
        </LinearLayout>
    </LinearLayout>

 

</LinearLayout>