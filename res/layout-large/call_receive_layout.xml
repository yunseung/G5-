<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="436dp"
    android:layout_height="454dp"
    android:background="@drawable/popup_receive_bg"
    android:orientation="vertical"
    android:padding="8dp" >

    <Button
        android:id="@+id/btn_close"
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="@drawable/popup_btn_selector" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:src="@drawable/popup_call_ani00" />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="46dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="14dp"
        android:text="홍길동"
        android:textColor="#333333"
        android:textSize="36sp" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center_horizontal"
        android:text="010-1234-5678"
        android:textColor="#777777"
        android:textSize="32sp" />

    <TextView
        android:id="@+id/tv_carname"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginTop="45dp"
        android:text="AVANTE 1.6"
        android:textColor="#777777"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_day"
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:text="AVANTE 1.6"
        android:textColor="#777777"
        android:textSize="24sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="38dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:text="순회정비"
        android:textColor="#777777"
        android:textSize="24sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <Button
            android:id="@+id/btn_OK"
            android:layout_width="195dp"
            android:layout_height="44dp"
            android:background="@drawable/btn01_selector"
            android:text="통화"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_negative"
            android:layout_width="195dp"
            android:layout_height="44dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/btn05_selector"
            android:text="거절"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>