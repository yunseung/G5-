<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="14dp" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/popup_bbg" >

        <LinearLayout android:padding="3dp"
            android:id="@+id/ll_wheel"
            android:layout_width="200dp"
            android:layout_height="wrap_content" >

            <kankan.wheel.widget.WheelView
                android:id="@+id/wv_hour"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/popup_wheel" >
            </kankan.wheel.widget.WheelView>

            <kankan.wheel.widget.WheelView
                android:id="@+id/wv_min"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="@drawable/popup_wheel" >
            </kankan.wheel.widget.WheelView>
        </LinearLayout>

        <Button
            android:id="@+id/btn_select"
            android:layout_width="120dp"
            android:layout_height="30dp"
            android:layout_below="@+id/ll_wheel"
            android:layout_centerHorizontal="true"
            android:background="@drawable/popup_btn01_selector"
            android:text="선택" />
    </RelativeLayout>

</RelativeLayout>