<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_root"
    android:layout_width="456dp"
    android:layout_height="wrap_content"
    android:background="@drawable/popup_bg"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:padding="8dp" >

    <include layout="@layout/common_dialog_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/popup_call_list"
        android:paddingLeft="26dp" >

        <TextView
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="핸드폰"
            android:textColor="#777777"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_hp"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="@dimen/pop_txt_size3" />

        <Button
            android:id="@+id/btn_call_hp"
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:layout_marginLeft="39dp"
            android:background="@drawable/call_btn_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/popup_call_list"
        android:paddingLeft="26dp" >

        <TextView
            android:layout_width="106dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="집"
            android:textColor="#777777"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_home"
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:textColor="#333333"
            android:textSize="@dimen/pop_txt_size3" />

        <Button
            android:id="@+id/btn_call_home"
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:layout_marginLeft="39dp"
            android:background="@drawable/call_btn_selector" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/popup_call_list"
        android:paddingLeft="26dp" >

        <TextView
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:text="직접입력"
            android:textColor="#777777"
            android:textSize="18sp" />

        <com.ktrental.ui.PopupWindowTextView
            android:id="@+id/tv_custom"
            android:layout_width="216dp"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical"
            android:background="@drawable/input01"
            android:gravity="center_vertical"
            android:hint="수신자 전화번호 입력"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:textColor="#555555"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btn_call_custom"
            android:layout_width="50dp"
            android:layout_height="38dp"
            android:layout_marginLeft="39dp"
            android:background="@drawable/call_btn_selector" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="64dp" >

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="195dp"
            android:layout_height="44dp"
            android:layout_gravity="center"
            android:background="@drawable/btn05_selector"
            android:text="취소"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </FrameLayout>

</LinearLayout>