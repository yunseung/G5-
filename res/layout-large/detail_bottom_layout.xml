<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="20dp"
    android:paddingRight="20dp"
    android:paddingTop="20dp" >

    <FrameLayout
        android:id="@+id/lay_detail_bottom"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_alignParentBottom="true" >

        <Button
            android:id="@+id/btn_complate"
            android:layout_width="270dp"
            android:layout_height="36dp"
            android:layout_gravity="center"
            android:background="@drawable/btn05_selector"
            android:gravity="center"
            android:text="확인"
            android:textColor="#ffffff" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/lay_detail_bottom"
        android:background="@drawable/table_bg"
        android:orientation="vertical" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:background="@drawable/table_top"
            android:paddingLeft="14dp" >

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="20"
                android:gravity="center"
                android:text="정비항목"
                android:textColor="#555555"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="30"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="정비항목그룹"
                android:textColor="#555555"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:gravity="center"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="수량"
                android:textColor="#555555"
                android:textSize="15sp" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="5"
                android:gravity="center"
                android:text="행위"
                android:textColor="#555555"
                android:textSize="15sp" />
        </LinearLayout>

        <ListView
            android:id="@+id/lv_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="#d2d2d2"
            android:dividerHeight="1dp" >
        </ListView>
    </LinearLayout>

</RelativeLayout>