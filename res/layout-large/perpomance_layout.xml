<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafaf7"
    android:orientation="vertical" >

    <include
        android:id="@+id/layout_top"
        layout="@layout/common_title_layout" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tv_graph_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="11dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="18dp"
            android:drawableLeft="@drawable/blit02"
            android:gravity="center_vertical"
            android:text="정비현황"
            android:textColor="#555555"
            android:textSize="18sp" />
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|right"
            android:gravity="right"
            android:paddingTop="15dp" >

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:src="@drawable/graph_legend01" />

            <TextView
                android:layout_width="78dp"
                android:layout_height="25dp"
                android:layout_marginLeft="7dp"
                android:gravity="center_vertical"
                android:text="책임정비사"
                android:textColor="#777777"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:src="@drawable/graph_legend02" />

            <TextView
                android:layout_width="78dp"
                android:layout_height="25dp"
                android:layout_marginLeft="7dp"
                android:gravity="center_vertical"
                android:text="소속MOT"
                android:textColor="#777777"
                android:textSize="15sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:src="@drawable/graph_legend03" />

            <TextView
                android:layout_width="78dp"
                android:layout_height="25dp"
                android:layout_marginLeft="7dp"
                android:gravity="center_vertical"
                android:text="전체MOT"
                android:textColor="#777777"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="399dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/graph_bg"
        android:paddingRight="6dp" >

        <RelativeLayout
            android:layout_width="57dp"
            android:layout_height="399dp"
            android:layout_marginBottom="66dp"
            android:paddingLeft="10dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_above="@+id/tv_percent_4"
                android:layout_marginBottom="31dp"
                android:gravity="right"
                android:text="100%"
                android:textColor="#999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_percent_4"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_above="@+id/tv_percent_3"
                android:layout_marginBottom="31dp"
                android:gravity="right"
                android:text="80%"
                android:textColor="#999999"
                android:textSize="13sp" />

            <TextView
