                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_above="@+id/tv_percent_2"
                android:layout_marginBottom="31dp"
                android:gravity="right"
                android:text="60%"
                android:textColor="#999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_percent_2"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_above="@+id/tv_percent_1"
                android:layout_marginBottom="31dp"
                android:gravity="right"
                android:text="40%"
                android:textColor="#999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_percent_1"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_above="@+id/tv_percent_0"
                android:layout_marginBottom="31dp"
                android:gravity="right"
                android:text="20%"
                android:textColor="#999999"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_percent_0"
                android:layout_width="match_parent"
                android:layout_height="19dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="57dp"
                android:gravity="right"
                android:text="0%"
                android:textColor="#999999"
                android:textSize="13sp" />
        </RelativeLayout>

        <ImageView
            android:layout_width="1140dp"
            android:layout_height="251dp"
            android:layout_marginBottom="66dp"
            android:layout_marginLeft="64dp"
            android:layout_marginTop="82dp"
            android:background="@drawable/graph_pattern" />

        <include layout="@layout/perpomance_graph_layout" />

