<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical"
        android:background="@drawable/table_list_selector"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/inventory_search_row_id1"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="14dp"
            android:src="@drawable/check_off" />



        <TextView
            android:id="@+id/inventory_search_row_id2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:visibility="gone"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="가솔린id2"
            android:textColor="#333333"
            android:textSize="16sp" />
        

<TextView
            android:id="@+id/inventory_search_row_id3"
            android:layout_width="337dp"
            android:layout_height="match_parent"
            android:gravity="left|center_vertical"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="가솔린id4"
            android:textColor="#333333"
            android:textSize="16sp" />

                        <RelativeLayout
            android:layout_width="100dp"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/inventory_search_row_id4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:focusable="false"
                android:background="@drawable/input01"
                android:gravity="center"
                android:inputType="number"
                android:paddingBottom="7dp"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:paddingTop="7dp"
                android:text="10"
                android:textColor="#333333"
                android:textSize="16sp" />

        </RelativeLayout>
<TextView
            android:id="@+id/inventory_search_row_id5"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:maxLines="1"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="가솔린id4"
            android:textColor="#333333"
            android:textSize="16sp" />
 
    </LinearLayout>

</RelativeLayout>