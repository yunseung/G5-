<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fafaf7" />

        <!-- full area -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="10dp"
            android:paddingRight="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingTop="11dp"
                android:paddingBottom="18dp">

                <TextView
                    android:id="@+id/point"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:drawableLeft="@drawable/blit02"
                    android:gravity="center_vertical"
                    android:text="점검항목"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <Button
                    android:id="@+id/btn_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/btn02_selector"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="차량점검 리스트"
                    android:textColor="@drawable/btn02_text_selector"
                    android:textSize="16dp"
                    android:visibility="gone" />

                <Button
                    android:id="@+id/btn_item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn02_selector"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="정비항목입력"
                    android:textColor="@drawable/btn02_text_selector" />

                <Button
                    android:id="@+id/btn_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/btn02_selector"
                    android:gravity="center"
                    android:paddingLeft="15dp"
                    android:paddingRight="15dp"
                    android:text="선택삭제"
                    android:textColor="@drawable/btn02_text_selector" />

            </LinearLayout>

            <!-- list area -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <!-- empty area -->
                <LinearLayout
                    android:id="@+id/ll_empty"
                    android:layout_width="470dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="150dp"
                    android:background="@drawable/table_bg"
                    android:layout_marginBottom="150dp"
                    android:gravity="center_vertical"
                    android:visibility="gone"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/icon_nosetting" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:lines="2"
                        android:maxLines="10"
                        android:text="차량에 대한&#10;순회정비 결과 교환 부품이 없습니다."
                        android:textColor="#777777"
                        android:textSize="20dp" />

                </LinearLayout>
                <!-- empty area -->


                <LinearLayout
                    android:id="@+id/ll_item_area"
                    android:layout_width="match_parent"
                    android:background="@drawable/table_bg"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="31dp"
                        android:background="@drawable/table_top"
                        android:paddingLeft="14dp"
                        android:paddingRight="14dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="선택"
                            android:textColor="#555555"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center_vertical"
                            android:paddingLeft="12dp"
                            android:text="정비항목그룹"
                            android:textColor="#555555"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="5"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:paddingLeft="12dp"
                            android:text="정비항목"
                            android:textColor="#555555"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:gravity="center_vertical"
                            android:text="소모"
                            android:textColor="#555555"
                            android:textSize="15sp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="재고"
                            android:textColor="#555555"
                            android:textSize="15sp" />

                        <TextView
                            android:id="@+id/tv_iot_price"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:gravity="center"
                            android:text="금액"
                            android:textColor="#555555"
                            android:textSize="15sp" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/lv_item"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:divider="@null" />

                </LinearLayout>

            </LinearLayout>
            <!-- list area -->


            <!-- etc area -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1000dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="11dp"
                    android:layout_marginTop="18dp"
                    android:drawableLeft="@drawable/blit02"
                    android:gravity="center_vertical"
                    android:text="기타항목"
                    android:textColor="#555555"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="230dp"
                    android:background="@drawable/table_bg"
                    android:orientation="vertical"
                    android:paddingLeft="10dp"
                    android:paddingRight="14dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="15dp"
                        android:orientation="horizontal"
                        android:weightSum="2" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="@dimen/pop_txt_width3"
                                android:layout_height="match_parent"
                                android:layout_marginRight="10dp"
                                android:gravity="right|center_vertical"
                                android:text="운행거리"
                                android:textColor="#555555"
                                android:textSize="16sp" />

                            <com.ktrental.ui.PopupWindowTextView
                                android:id="@+id/tv_last_mileage"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="12dp"
                                android:background="@drawable/input_selector"
                                android:gravity="center_vertical|right"
                                android:inputType="number"
                                android:paddingLeft="20dp"
                                android:textColor="#555555"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="@dimen/pop_txt_width3"
                                android:layout_height="match_parent"
                                android:layout_marginRight="10dp"
                                android:gravity="right|center_vertical"
                                android:text="긴급정비사유"
                                android:textColor="#555555"
                                android:textSize="16sp" />

                            <Button
                                android:id="@+id/btn_emergency"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/btn_dd01_selector"
                                android:paddingLeft="10dp" >
                            </Button>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal"
                        android:weightSum="2" >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="@dimen/pop_txt_width3"
                                android:layout_height="match_parent"
                                android:layout_marginRight="10dp"
                                android:gravity="right|center_vertical"
                                android:text="정비시작시간"
                                android:textColor="#555555"
                                android:textSize="16sp" />

                            <Button
                                android:id="@+id/btn_maintentnce_start_time"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginRight="12dp"
                                android:background="@drawable/btn_dd01_selector"
                                android:enabled="false"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="10dp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="horizontal" >

                            <TextView
                                android:layout_width="@dimen/pop_txt_width3"
                                android:layout_height="match_parent"
                                android:layout_marginRight="10dp"
                                android:gravity="right|center_vertical"
                                android:text="정비종료시간"
                                android:textColor="#555555"
                                android:textSize="16sp" />

                            <Button
                                android:id="@+id/btn_maintenance_end_time"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/btn_dd01_selector"
                                android:enabled="false"
                                android:gravity="left|center_vertical"
                                android:paddingLeft="10dp"
                                android:text="정비결과 저장 시간으로 설정" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="@dimen/pop_txt_width3"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:gravity="right|center_vertical"
                            android:text="비고"
                            android:textColor="#555555"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et_remarks"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/input_selector"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#555555"
                            android:textSize="16sp" >
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="@dimen/pop_txt_width3"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:gravity="right|center_vertical"
                            android:text="차기요청사항"
                            android:textColor="#555555"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et_next_request"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/input_selector"
                            android:imeOptions="actionNext"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#555555"
                            android:textSize="16sp" >
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="@dimen/pop_txt_width3"
                            android:layout_height="match_parent"
                            android:layout_marginRight="10dp"
                            android:gravity="right|center_vertical"
                            android:text="영업담당자요청사항"
                            android:textColor="#555555"
                            android:textSize="16sp" />

                        <EditText
                            android:id="@+id/et_contract"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/input_selector"
                            android:imeOptions="actionDone"
                            android:inputType="text"
                            android:paddingLeft="10dp"
                            android:paddingRight="10dp"
                            android:textColor="#555555"
                            android:textSize="16sp" >
                        </EditText>
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/btn_maintenance_save"
                    android:layout_width="270dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/btn01_selector"
                    android:text="정비 결과 저장"
                    android:textColor="#ffffff"
                    android:textSize="16sp" />

            </LinearLayout>

        </LinearLayout>
        <!-- full area -->
    </FrameLayout>

</LinearLayout>