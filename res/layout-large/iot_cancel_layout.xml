<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_root_view"
    android:layout_width="860dp"
    android:layout_height="440dp"
    android:focusableInTouchMode="true" >

    <LinearLayout
        android:layout_width="860dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/popup_bg"
        android:orientation="vertical"
        android:padding="8dp" >

        <include
            android:id="@+id/layout_title"
            layout="@layout/common_dialog_title_layout" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/right_bg"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="20dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:background="@drawable/table_top"
                android:orientation="horizontal"
                android:paddingLeft="24dp"
                android:paddingTop="18dp"
                android:paddingBottom="18dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="right|center_vertical"
                        android:layout_weight="1"
                        android:text="취소사유" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_marginTop="9dp"
                        android:gravity="right|center_vertical"
                        android:text="취소사유 상세" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:gravity="center_vertical"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/sp_reason"
                        android:layout_width="222dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/dropdown_selector_9"
                        android:layout_marginLeft="20dp"
                        android:layout_weight="3" />

                    <EditText
                        android:id="@+id/detail_memo"
                        android:layout_width="396dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="9dp"
                        android:layout_weight="3"
                        android:hint="상세사유를 입력해주세요" />
                </LinearLayout>

            </LinearLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="54dp" >

                <Button
                    android:id="@+id/btn_registration"
                    android:layout_width="270dp"
                    android:layout_height="36dp"
                    android:layout_gravity="center"
                    android:background="@drawable/btn01_selector"
                    android:gravity="center"
                    android:shadowColor="#000000"
                    android:shadowDy="-1"
                    android:shadowRadius="1"
                    android:text="등록"
                    android:textColor="#ffffff"
                    android:textSize="18sp" />
            </FrameLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>